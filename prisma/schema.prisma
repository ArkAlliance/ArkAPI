// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Character {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String @unique
  description String

  @@map("characters")
}
