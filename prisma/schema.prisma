// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Character {
  objectId    String @id @default(auto()) @map("_id") @db.ObjectId
  id          String @unique
  name        String
  description String

  @@map("characters")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  avatarUrl String
  email     String
  name      String
  username  String
  apiKeys   ApiKey[]

  oauthUserId      Int    @unique
  oauthAccessToken String

  @@map("users")
}

model ApiKey {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  user   User   @relation(fields: [userId], references: [id])
  key    String @unique
  name   String

  @@map("api_keys")
}
