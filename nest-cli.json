{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/graphql",
        "options": {
          "typeFileNameSuffix": [
            ".entity.ts",
            ".model.ts"
          ],
          "introspectComments": true
        }
      },
      "@nestjs/swagger"
    ]
  }
}